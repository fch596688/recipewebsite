<% include ./partials/header %>
<div class="section-header">

    <div id="#mainPage-carsouel">
    <div id="carousel-recipeGo" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-recipeGo" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-recipeGo" data-slide-to="1"></li>
            <li data-target="#carousel-recipeGo" data-slide-to="2"></li>
        </ol>

      <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="/assets/image/mainPageImg1.jpg" alt="mainPageImg1">
            <div class="carousel-caption">
                <h2>Make Your Recipe Special</h2>
            </div>
        </div>
        <div class="item">
            <img src="/assets/image/mainPageimg2.jpg" alt="mainPageimg2">
            <div class="carousel-caption">
              <h2>Make Your Dinner Flavorful</h2>
            </div>
        </div>
        <div class="item">
            <img src="/assets/image/mainPageImg3.jpg" alt="mainPageimg3">
            <div class="carousel-caption">
              <h2>Make Your Dishes healthy</h2>
            </div>
        </div>
  </div><!--carousel-inner list box-->

    <form id="searchForm">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-btn">
                <button class="btn btn-default">Search</button>
            </span>
        </div>
    </form>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-recipeGo" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-recipeGo" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
</div>
</div>

<div>
    <div class="container textarea">
        <h2>Main Dishes</h2>
        <hr class="br-dish">
    </div>
    <div class="container">
        <div class="row">
            <% Recipe.forEach(function(foundrecipe){ %>
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="/assets/image/<%= foundrecipe.image %>" alt="">
                        <div class="caption">
                          <h3><%= foundrecipe.title %></h3>
                          <p></p>
                          <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                        </div>
                    </div>
                </div> 
            <% }); %>
        </div>
    </div>
</div>



<% include ./partials/footer %>