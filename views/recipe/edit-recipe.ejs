<% include ../partials/header %>
<div class="ui container">
    <form action="/recipe/<%= recipe.id %>?_method=PUT" class="ui form" method="post">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="recipe[title]" value="<%= recipe.title %>">
        </div>
        <div class="field">
            <label for="">ImageURL</label>
            <input type="text" name="recipe[image]" value="<%= recipe.image %>">
        </div>
        <div class="field">
            <label for="">Description</label>
            <textarea name="recipe[description]"><%= recipe.description %></textarea>
        </div>
        <div class="field">
            <label for="">Ingredients</label>
            <textarea name="recipe[ingredients]"><%= recipe.ingredients %></textarea>
        </div>
        <div class="field">
            <label for="">Directions</label>
            <textarea name="recipe[directions]"><%= recipe.directions %></textarea>
        </div>
        <div class="field">
            <label for="">Nutrition Facts</label>
            <textarea name="recipe[nutrition_facts]"><%= recipe.nutrition_facts %></textarea>
        </div>
        <div class="field">
            <input type="submit">
        </div>
    </form>
</div>

<% include ../partials/footer %>