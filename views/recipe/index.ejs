<% include ../partials/header %>
<div id="carousel-recipeGo" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-recipeGo" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-recipeGo" data-slide-to="1"></li>
    <li data-target="#carousel-recipeGo" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
     <img src="/assets/image/mainPageImg1.jpg" alt="mainPageImg1">
      <div class="carousel-caption">
        <h2>Make Your Recipe Special</h2>
        <p>We are commited to helping you build your own menu.</p>
      </div>
    </div>
    <div class="item">
      <img src="/assets/image/mainPageimg2.jpg" alt="mainPageimg2">
      <div class="carousel-caption">
        <h2>Make Your Dinner Flavorful</h2>
        <p>We are happy to make you become a good chef.</p>
      </div>
    </div>
        <div class="item">
      <img src="/assets/image/mainPageImg3.jpg" alt="mainPageimg3">
      <div class="carousel-caption">
        <h2>Make Your Dishes healthy</h2>
        <p>We can help your to make a diet plan.</p>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-recipeGo" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-recipeGo" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="row">
   <% recipes.forEach(function(recipe){ %>
     <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <img src="<%= recipe.image %>" alt="image">
            <div class="caption">
                <h3><%= recipe.title %> </h3>
                <p></p>
                <p><a href="recipe/<%= recipe._id %>" class="btn btn-primary" role="button">More</a></p>
            </div>
        </div>
     </div>  
   <% }); %>
</div>

<% include ../partials/footer %>






